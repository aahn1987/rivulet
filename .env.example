# Application Configuration
APP_NAME=Rivulet
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_LOCALE=en

# Encryption Key
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=rivulet
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Additional Database Connections
DB_SECONDARY_CONNECTION=mysql
DB_SECONDARY_HOST=127.0.0.1
DB_SECONDARY_PORT=3306
DB_SECONDARY_DATABASE=rivulet_secondary
DB_SECONDARY_USERNAME=root
DB_SECONDARY_PASSWORD=

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=rivulet
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_FILES_PATH=storage/sessions

# Cookie Configuration
COOKIE_PATH=/
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@rivulet.com
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration
QUEUE_CONNECTION=database
QUEUE_TABLE=jobs
QUEUE_FAILED_TABLE=failed_jobs

# File System Configuration
FILESYSTEM_DRIVER=local
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging Configuration
LOG_CHANNEL=single
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=
LOG_PATH=storage/logs/rivulet.log

# Notification Services
FIREBASE_SERVER_KEY=
FIREBASE_SENDER_ID=
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
SLACK_WEBHOOK_URL=
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Security
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Development
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_STRICT_MODE=false